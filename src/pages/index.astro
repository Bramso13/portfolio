			</div>
			<div class="flex w-full h-full">
				<div class="flex gap-10 px-20 w-full">
					{projects.map((project, index) => (
						<a href={project.link} class="flex flex-col w-full h-fit">
							<ProjectCard title={project.title} description={project.description} image={project.img}/>
						</a>
					))}
				</div>
			</div>
		</section>
		<section class="flex max-h-fit w-full">
			<div class="flex flex-col px-20 w-[30%]">

					{skills.map((skill, indexx) => (
						<Card id={indexx} title={skill.title} description={skill.description} href={skill.href}/>
					))}
				</div>
			</div>
		</section>
		<section class="flex h-fit w-full">
			<div class="flex flex-col px-20 w-[30%]">
				<h2 class="w-fit text-xl bg-violet-500 mb-3 fontt">
					Featured Projects
				</h2>
				<svg width="49" height="66" viewBox="0 0 49 66" fill="none" xmlns="http://www.w3.org/2000/svg"
					class="self-end">

---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import ProjectCard from "../components/ProjectCard.astro";
import Experience from "../components/Experience.astro";
import {experiences, projects, skills} from "../constants";

---

<Layout title="Brahim's Portfolio">
	<main class="flex flex-col gap-20">
		<section class="flex w-full h-96">
			<div class="flex w-1/2 h-full items-end p-20">
				<h1 class="text-6xl z-0">I <span class="drop-shadow-lg underline decoration-violet-500 ">code</span> top notch websites and applications.</h1>
			</div>
			<div class="flex flex-col items-start justify-end gap-1 p-20 w-1/2 h-full">
				<h2 class="text-l">
					Expert in web development and Python programming, with a focus on creating dynamic and user-friendly applications. Proven track record of delivering high-quality projects that blend innovative design with efficient functionality.
				</h2>
				<a href="#contact" class="py-4 px-8 bg-black text-white">Hire me</a>
			</div>
		</section>
		<section class="flex flex-col w-full h-fit">
			<div class="flex flex-col px-20">
				<h2 class="w-fit text-xl bg-violet-500 fontt">
					What I do ?
				</h2>
